<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:background="@drawable/card_corner"
    android:padding="@dimen/_11sdp">

    <ImageView
        android:id="@+id/cb_item_select"
        android:layout_width="@dimen/_23sdp"
        android:layout_height="@dimen/_24sdp"
        android:background="@drawable/checkbox_deselect"
        android:checked="false"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:text="Gourav Modi"
        android:textColor="@color/text_heading"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toEndOf="@id/cb_item_select"
        app:layout_constraintTop_toTopOf="@id/cb_item_select" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_13sdp"
        android:text="gouravmodi10@gmail.com"
        android:textColor="@color/text_heading"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="@id/cb_item_select"
        app:layout_constraintStart_toEndOf="@id/cb_item_select"
        app:layout_constraintTop_toBottomOf="@id/tv_name" />

    <TextView
        android:id="@+id/tv_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8529452679"
        android:textColor="@color/text_heading"
        android:textSize="@dimen/_9sdp"
        app:layout_constraintBottom_toBottomOf="@id/tv_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_email"
        app:layout_constraintTop_toTopOf="@id/tv_email" />

</androidx.constraintlayout.widget.ConstraintLayout>